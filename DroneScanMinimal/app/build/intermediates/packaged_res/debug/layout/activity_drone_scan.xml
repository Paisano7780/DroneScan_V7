<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DroneScan - Escáner de Códigos QR/Barras"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Esperando conexión de dispositivo..."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:padding="12dp">

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conecta tu drone DJI Mini 3 vía USB para comenzar el escaneo automático de fotos.\n\nLa aplicación:\n1. Detectará automáticamente cuando conectes el drone\n2. Escaneará todas las fotos en busca de códigos QR y de barras\n3. Exportará los resultados a un archivo CSV en Documents/DroneScan\n\nAsegúrate de haber concedido los permisos necesarios."
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/scan_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Escanear Manualmente"
            android:background="#2196F3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/export_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ver Exportaciones"
            android:background="#4CAF50"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
