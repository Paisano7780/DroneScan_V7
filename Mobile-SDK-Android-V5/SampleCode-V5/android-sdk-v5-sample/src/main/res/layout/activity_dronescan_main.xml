<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#f0f8ff"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_main"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DroneScan V7"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2c5aa0"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escaneador autom치tico de c칩digos QR/barras desde drone DJI"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游댋 Inicializando DJI SDK..."
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:padding="20dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="游뚜 INICIAR DRONESCAN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#4CAF50"
        android:enabled="false"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrucciones:\n1. Conecta el DJI RC via USB\n2. Conecta el drone al RC\n3. Presiona INICIAR\n4. Toma fotos con el RC\n5. Los c칩digos se exportar치n autom치ticamente"
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:padding="16dp"
        android:background="#f9f9f9"
        android:elevation="2dp" />

</LinearLayout>
